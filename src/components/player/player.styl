.player {
  .bg-box {
    width: 100%;
    height: 100%;
    position: absolute;
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center;
    filter: blur(30px);
    z-index: -2;
  }

  .mini-player {
    position: fixed;
    bottom: 0;
    z-index: 500;
    width: 100%;
    background: #444;
    display: flex;
    justify-content: space-between;
    aling-items: center;
    padding: 5px 0;

    &-left {
      display: flex;
      align-items: center;

      &-text {
        display: flex;
        flex-direction: column;
        justify-content: space-around;
        height: 100%;
        margin-left: 10px;

        span {
          color: #fff;
        }

        .singer-name {
          font-size: 14px;
          text-align: left;
          color: #666;
        }
      }

      .album {
        width: 50px;
        height: 50px;
        overflow: hidden;
        border-radius: 50%;
        margin-left: 10px;
      }
    }

    &-right {
      height: 50px;
      margin-right: 10px;
      padding: 0 10px;

      i {
        font-size: 20px;
        line-height: 50px;
        color: orange;
        padding: 0 5px;
      }
    }
  }

  .normal-player {
    color: #fff;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: #222;
    z-index: 1000;

    .play-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      height: 60px;
      padding: 5px 15px;

      .fa-angle-left {
        font-size: 30px;
        color: orange;
        height: 100%;
        line-height: 50px;
      }

      .text {
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: space-around;

        h3 {
          font-weight: normal;
          font-size: 18px;
        }
      }
    }

    .album {
      position: absolute;
      width: 250px;
      height: 250px;
      border-radius: 50%;
      overflow: hidden;
      left: 50%;
      margin-left: -125px;
      transition-duration: 0.3s;

      img {
        width: 100%;
      }
    }

    .play-footer {
      position: absolute;
      bottom: 20px;
      width: 100%;

      .progress-bar {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0 10px;

        .progress-bar-line {
          width: 220px;
        }
      }

      ul {
        display: flex;
        justify-content: space-between;
        list-style: none;

        i {
          font-size: 20px;
          color: orange;
          padding: 20px;
        }
      }
    }
  }
}

.normal-enter-active, .normal-leave-active {
  transition: all 0.5s;

  .play-header {
    transition: all 0.5s cubic-bezier(0.12, 1.01, 0.6, 1.5);
  }

  .play-footer {
    transition: all 0.5s cubic-bezier(0.12, 1.01, 0.6, 1.5);
  }
}

.normal-enter, .normal-leave-to {
  opacity: 0;

  .play-header {
    transform: translate3d(0, -100px, 0);
  }

  .play-footer {
    transform: translate3d(0, 100px, 0);
  }
}

.album-rotate {
  animation: album-rotate 20s linear infinite;
}

.album-pause {
  animation-play-state: paused;
}

@keyframes album-rotate {
  from {
    transform: rotate(0deg);
  }

  to {
    transform: rotate(360deg);
  }
}

.middle {
  position: fixed;
  width: 100%;
  bottom: 180px;
  top: 100px;
  font-size: 0;
  white-space: nowrap;
}

.lyric-list {
  position: absolute;
  width: 100%;
  height: 100%;
  font-size: 0;
  left: 100%;
  transition-duration: 0.3s;
  top: 0;
}

.middle-left {
  width: 100%;
  height: 100%;
  display: inline-block;
  transition-duration: 0.3s;
}

.lyric-wrapper {
  font-size: 16px;
  position: absolute;
  top: 87%;
  left: 50%;
  transform: translateX(-50%);
}

.control-banner {
  margin-top: 15px;
  position: relative;
  top: 430px;

  span {
    width: 10px;
    height: 10px;
    background: #fff;
    display: inline-block;
    border-radius: 100%;
    margin: 0 2px;
    transition: all 0.3s;

    &.active {
      width: 25px;
      border-radius: 5px;
      opacity: 0.6;
    }
  }
}

.commentbtn {
  position: fixed;
  bottom: 130px;
  z-index: 500;
  right: 15px;
  z-index: 100;

  .fa-commenting {
    font-size: 22px;
    color: orange;
    display: inline-block;
    padding: 5px;
  }
}

.currentsong-album {
  box-shadow: 0px 0px 10px 10px #777;
}